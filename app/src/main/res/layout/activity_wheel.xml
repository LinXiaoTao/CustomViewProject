<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        layout="@layout/include_toolbar"/>

    <com.leo.customviewproject.wheel.WheelView
        android:id="@+id/wheel"
        android:layout_width="200dp"
        android:layout_height="400dp"
        android:background="@color/white"
        app:normalTextColor="@android:color/darker_gray"
        app:selectPosition="100"
        app:selectedLineColor="@android:color/black"
        android:padding="10dp"
        app:textVerticalSpacing="15dp"
        app:textSize="20sp"
        app:selectedTextColor="@android:color/holo_green_dark"/>

</LinearLayout>